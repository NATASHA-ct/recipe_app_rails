 <div>
  <h3>Your General Shopping List</h3>
  <div class="d-flex flex-row justify-content-evenly mb-5">
    <h3>Amount of food items to buy: <%= @foods.length %> </h3>
    <h3>Total price: <%= @total_price %></h3>
  </div>

  <div class="listDiv">
  <table class="table table-striped table-bordered">
      <thead>
          <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
          </tr>
      </thead>

      <tbody>
         <% @foods.each do |food| %>
          <tr>
            <% quantity = Recipefood.joins(:food).where(food_id: food.id).sum( 'quantity') %>
            <td><%= food.name %></td>
              <td><%= quantity %></td>
            <td>$<%= (food.price * quantity) %></td>
          </tr>
        <%end%>
      </tbody>
      </div>
      
  </table>
  <button class="border-light bg-info rounded-3 my-4 p-1 text-decoration-none"><%= link_to "Back to recipes", recipes_path%></button>
</div>